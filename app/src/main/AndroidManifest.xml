<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.elitebook.employeeclient">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".EmployeeClientApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.employees.get.GetEmployeesActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.employees.create.CreateEmployeeActivity"
            android:label="@string/title_activity_create_employee"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>